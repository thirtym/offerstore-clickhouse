<yandex>
    <storage_configuration>
        <disks>
            <ingestion_disk>
                <path>/mnt/data/</path>
                <keep_free_space_bytes>107374182400</keep_free_space_bytes>
            </ingestion_disk>
        </disks>

        <policies>
            <live_data_policy>
                <volumes>
                    <volume_main>
                        <disk>default</disk>
                    </volume_main>
                    <volume_ingestion>
                        <disk>ingestion_disk</disk>
                    </volume_ingestion>
                </volumes>
            </live_data_policy>

            <ingestion_temp_policy>
                <volumes>
                    <volume_ingestion>
                        <disk>ingestion_disk</disk>
                    </volume_ingestion>
                    <volume_main>
                        <disk>default</disk>
                    </volume_main>
                </volumes>
            </ingestion_temp_policy>
        </policies>
    </storage_configuration>
</yandex>